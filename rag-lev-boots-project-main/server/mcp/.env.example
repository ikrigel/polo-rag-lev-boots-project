# Lev-Boots MCP Server Environment Configuration
# Copy this file to .env and fill in your actual values

# Google Gemini API Key - required for embeddings
# Get from: https://console.cloud.google.com/apis/credentials
Gemini_API_KEY=your_gemini_api_key_here

# Perplexity API Key - required for LLM responses
# Get from: https://www.perplexity.ai/
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Perplexity Model - usually "sonar"
PERPLEXITY_MODEL=sonar

# PostgreSQL Database URL - required for knowledge base
# Format: postgresql://username:password@host:port/database
# Example with Supabase: postgresql://postgres.xyz:password@aws-1-region.pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://username:password@host:port/database
